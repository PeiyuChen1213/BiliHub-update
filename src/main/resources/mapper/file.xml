<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.chenpeiyu.bilihub.dao.FileDao">

    <insert id="addFile" parameterType="cn.chenpeiyu.bilihub.domain.File">
        insert into
            t_file(
                url,
                `type`,
                md5,
                createTime
            )value(
                #{url},
                #{type},
                #{md5},
                #{createTime}
            )
    </insert>

    <select id="getFileByMD5" parameterType="java.lang.String" resultType="cn.chenpeiyu.bilihub.domain.File">
        select
            *
        from
            t_file
        where
            md5 = #{md5}
    </select>

</mapper>